<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <bean id="Pet" class="my.project.spring_configuration.PetImpl">
        <constructor-arg type="java.util.Random">
            <bean class="java.util.Random"/>
        </constructor-arg>
    </bean>

    <bean id="PetClinic" class="my.project.spring_configuration.PetClinic">
        <constructor-arg index="0" ref="Pet"/>
        <property name="clinicName" value="My Pet Clinic"/>
    </bean>

    <bean id="PetGreeter" class="my.project.spring_configuration.PetGreeter">
        <constructor-arg name="petClinic" ref="PetClinic"/>
    </bean>

</beans>